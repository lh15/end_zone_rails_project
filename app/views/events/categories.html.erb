<div class="container">  
<div class="row">
    <h1><%= @category %></h1>
    <% @events.each do |event| %>
      <a href="/events/<%= event.id %>">

        <div class="col s12 m4 ">
          <div class="card">
            <div class="card-image">
              <img src="<%= event.performers[0].img_url %>" alt="" class="image_in_card">
            </div>
            <div class="card-content">
              <p>
                <%= event.title %><br>
                <%= event.date.strftime("%A, %B %d @ %l %p") %><br>
                <%= event.venue.city %>
              </p>
            </div>
          </div>
        </div>
      </a>
      <% end %>
  </div>
</div>  