<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color:red; font-size: 12px;">
      <%= error %>
    </p>
    <% end %>
      <% end %>
        <br><br>



        <h1>Please <a href="#modal_login">Login</a> or go to <a href="/events">Events</a></h1> 
        <!-- Modal Structure -->
        <div id="modal_login" class="modal">
          <form action="/users/login" method="post" id="login">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" class="input is-primary">
            <div class="row">
              <div class="input-field col s12">
                <input id="email" type="email" name="user[email]" class="validate">
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" name="user[password]" class="validate">
                <label for="password">Password</label>
              </div>
            </div>
            <input id="signupbutton" type="submit" value="Sign in">
          </form>
          <br>
          <a id="tag" href=""> Forgot your password? </a>
          <p>New to EndZone? <span style="color: rgb(66, 103, 178)"> <a href="#modal_reg">Sign Up</a></span> </p>
        </div>

        <!-- Modal Structure -->
        <div id="modal_reg" class="modal">
          <p>Sign up, Pay up, Get out </p>
          <br>
          <a href="http://www.facebook.com">
            <div id="facebook">

              <p><img id="facebooklogo" src="https://s-media-cache-ak0.pinimg.com/736x/3f/40/7d/3f407dc965335257705ea112bb3a32ce--energy-use-a-program.jpg">                Sign up with facebook
              </p>
            </div>
          </a>
          <br> OR
          <p> Sign up with EndZone! </p>

          <div class="row">
            <form class="col s12" action="/users" method="post">
              <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
              <div class="row">
                <div class="input-field col s6">
                  <input id="first_name" name="user[first_name]" type="text" class="validate">
                  <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s6">
                  <input id="last_name" type="text" name="user[last_name]" class="validate">
                  <label for="last_name">Last Name</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="address" type="text" name="user[address]" class="validate">
                  <label for="address">Address</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="phonenumber" type="text" name="user[phone_number]" class="validate">
                  <label for="phonenumber">Phone Number</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="email" type="email" name="user[email]" class="validate">
                  <label for="email">Email</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="password" type="password" name="user[password]" class="validate">
                  <label for="password">Password</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="confirmpassword" type="password" name="user[password_confirmation]" class="validate">
                  <label for="confirmpassword">Confirm Password</label>
                </div>
              </div>
              <p>
                <input type="checkbox" class="filled-in" id="filled-in-box" checked="checked" />
                <label for="filled-in-box">Send me emails about upcoming events</label>
              </p>
              <br>
              <input id="signupbutton" type="submit" value="Sign Up">
            </form>
          </div>

          <br>
          <p> By signing up, you agree to our <span style="color: rgb(66, 103, 178)"> user agreement </span> and <span style="color: rgb(66, 103, 178)"> privacy notice</span>.
          </p>
          <br><br>
          <p>Have an account with EndZone? <span style="color: rgb(66, 103, 178)"> Sign in </span> </p>
          <br><br>


          <p> Get seats you'll hate, anytime </p>

          <br>
          <a href="http://www.facebook.com">
            <div id="facebook">
              <p> <img id="facebooklogo" src="https://s-media-cache-ak0.pinimg.com/736x/3f/40/7d/3f407dc965335257705ea112bb3a32ce--energy-use-a-program.jpg">                Sign in with Facebook
              </p>
            </div>
          </a>

        </div>





        <script>
          $(document).ready(function () {
            $('#modal_login').modal('open');
          });
        </script>