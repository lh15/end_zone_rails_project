<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end %>
  <br><br>
<form action="/users" method="post">
<h1>Register</h1>
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" class="input is-primary">
<label>First Name</label>
<input type="text" name="user[first_name]" class="input is-primary"><br>
<label>Last Name</label>
<input type="text" name="user[last_name]" class="input is-primary"><br>
<label>Address</label>
<input type="text" name="user[address]" class="input is-primary"><br>
<label>Phone Number</label>
<input type="text" name="user[phone_number]" class="input is-primary"><br>
<label>Email</label>
<input type="email" name="user[email]" class="input is-primary"><br>
<label>Password</label>
<input type="password" name="user[password]" class="input is-primary"><br>
<label>Confirm Password</label>
<input type="password" name="user[password_confirmation]" class="input is-primary"><br><br>
<input type="submit" class="button is-primary">
</form>
<br>



<form action="/users/login" method="post" id="login">
<h1>Login</h1>
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" class="input is-primary">
<label>Email</label><br>
<input type="text" name="user[email]" class="input is-primary"><br>
<label>Password</label><br>
<input type="password" name="user[password]" class="input is-primary"><br><br>
<input type="submit" class="button is-primary">
</form>