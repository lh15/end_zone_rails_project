<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end %>
  <br><br>
<form action="/users" method="post">
<h1>Sign up with EndZone</h1>
<br>
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" class="input is-primary">

<input type="text" name="user[first_name]" class="input is-primary" placeholder="First name"><br><br><hr>

<input type="text" name="user[last_name]" class="input is-primary" placeholder="Last name"><br><br><hr>

<input type="text" name="user[address]" class="input is-primary" placeholder="Address"><br><br><hr>

<input type="text" name="user[phone_number]" class="input is-primary" placeholder="Phone Number"><br><br><hr>

<input type="email" name="user[email]" class="input is-primary" placeholder="Email"><br>
<p> Email is case sensitive. </p>
<hr>

<input type="password" name="user[password]" class="input is-primary" placeholder="Password"><br><br><hr>

<input type="password" name="user[password_confirmation]" class="input is-primary" placeholder="Confirm Password"><br><br><hr>
<input type="checkbox"> Sign me up for updates
<br><br><hr>
<input type="submit" class="button is-primary">
</form>
<br>



<form action="/users/login" method="post" id="login">
<h1>Have an account with EndZone? <u style="color:blue"> Sign in </u> </h1>
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" class="input is-primary">
<label>Email</label><br>
<input type="text" name="user[email]" class="input is-primary"><br>
<p> Email is case sensitive. </p>
<label>Password</label><br>
<input type="password" name="user[password]" class="input is-primary"><br><br>
<input type="submit" class="button is-primary">
</form>