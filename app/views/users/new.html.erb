<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end %>
  <br><br>
<form action="/users" method="post">
<h1>Sign up with EndZone</h1>
<br>
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" class="input is-primary">

<input type="text" name="user[first_name]"  placeholder="First name"><br><br><hr>

<input type="text" name="user[last_name]" placeholder="Last name"><br><br><hr>

<input type="text" name="user[address]"  placeholder="Address"><br><br><hr>

<input type="text" name="user[phone_number]"  placeholder="Phone Number"><br><br><hr>

<input type="email" name="user[email]"  placeholder="Email"><br>
<p> Email is case sensitive. </p>
<hr>

<input type="password" name="user[password]"  placeholder="Password"><br>
<p> Password must be no less than 2 characters and no more than 15 characters. </p>
<hr>

<input type="password" name="user[password_confirmation]"  placeholder="Confirm Password"><br>
<p> Passwords must match. </p>
<hr>
<input type="checkbox"> Sign me up for updates
<br><br><hr>
<input type="submit">
</form>
<br>



<form action="/users/login" method="post" id="login">
<h1>Have an account with EndZone? <u style="color:blue"> Sign in </u> </h1>
<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden" class="input is-primary">
<label>Email</label><br>
<input type="text" name="user[email]"><br>
<p> Email is case sensitive. </p>
<label>Password</label><br>
<input type="password" name="user[password]"><br><br>
<input type="submit">
</form>